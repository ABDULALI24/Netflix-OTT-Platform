@model IEnumerable<NetFlixPrac.Models.Customer>

<table class="table table-hover table-bordered bg-light "style="border: 2px solid black";>
    <thead class="bg-info">
        <tr>
            
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Membership</th>
            <th>Actions</th>

        </tr>
       
    </thead>

    <tbody class="mycss">
        @foreach(var customer in Model) 
        {
            <tr>
               
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.Birthdate.Value.ToString("dddd, dd MMMM yyyy")
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", "Customers", new { id = customer.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", "Customers", new { id = customer.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("Create","Create","Customers",null,new {@class="btn btn-info"})
</div>