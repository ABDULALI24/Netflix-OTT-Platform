
@model NetFlixPrac.Models.Customer


<div class="">
    @using (Html.BeginForm("Save", "Customers", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Name, "Enter Name")
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control",PlaceHolder="Your Name"})
            @Html.ValidationMessageFor(c => c.Name,"",new {@class = "color : red"})
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.MembershipType, "Select Membership")
            @Html.DropDownListFor(c => c.MembershipTypeId,
                                       new SelectList(ViewBag.MembershipTypeList, "Id", "Name"),
                                       "Click to Select",
                                       new { @class = "form-control" }
                                  )
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Birthdate,"Date of Birth")
            @Html.TextBoxFor(c => c.Birthdate,new {@class="form-control",PlaceHolder="Enter Your Date of Birth" })
        </div>
        <div>
            @Html.HiddenFor(c => c.Id)

        </div>
        <br />
        <div>
            <input type="submit" value="Save" class=" btn btn-success" />

            @Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-info" })
        </div>
    }



</div>


